<Window x:Class="APICallText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APICallText"
        mc:Ignorable="d"
        Loaded="WindowLoaded"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="PrevButton" Content="Prev" Padding="15" Margin="15" Click="PrevButton_Click"/>
            <Button x:Name="SunInfoButton" Content="Sun Info" Padding="15" Margin="15" Click="SunInfoButton_Click"/>
            <Button x:Name="NextButton" Content="Next" Padding="15" Margin="15" Click="NextButton_Click"/>
        </StackPanel>

        <Image x:Name="comicImage" Grid.Row="1" Margin="20" />

    </Grid>
</Window>
